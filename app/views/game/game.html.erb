<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-3 col-md-6">
      <div>
        <p>
          Here are the letters:
        </p>
        <ul class="list-inline">
          <% @grid.each do |letter| %>
            <li> <%= letter %> </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-xs-12 col-sm-9 col-md-6">
      <form class="form-inline" action="/game/score">
        <div class="form-group">
          <label for="attempt">Your attempt: </label>
          <input type="text" class="form-control" id="attempt" name="attempt" placeholder="Type your attempt here...">
          <input type="hidden" name="grid" value=<%= @grid.join() %> >
          <input type="hidden" name="start_time" value=<%= @start_time%> >
        </div>
        <button type="submit" class="btn btn-warning">Try this answer</button>
      </form>
    </div>

  </div>
</div>


<p class="text-center"> <br> Find me in app/views/game/game.html.erb</p>
